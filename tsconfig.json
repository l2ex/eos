{
  "compilerOptions": {
    "target": "esnext",
    "paths": {
      "*": ["src/types/*"]
    },
    "baseUrl": ".",
    "module": "commonjs",
    "lib": ["es5", "es2015", "es2016", "es2017"],
    "strict": true,
    "esModuleInterop": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "src/types"],
    "outDir": "./lib",
    "rootDir": "./src"
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./tests"]
}
